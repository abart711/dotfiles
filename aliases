# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
alias so='source ~/Developer/abart711/dotfiles/aliases'
alias aa='vim  ~/Developer/abart711/dotfiles/aliases'

# git
alias gci="git pull --rebase && rake && git push"
alias gad='git add --all .'
alias gca='git commit -a'
alias gcm="git commit -m"
alias gp="git push"
alias gr='git reflog'
alias gcb='git co -b $1'

#Vimrc
alias vrc="vim ~/Developer/abart711/dotfiles/vimrc"
alias vrb="vim ~/Developer/abart711/dotfiles/vimrc.bundles"

# Bundler
alias b="bundle"

# Tests and Specs
alias t="ruby -I test"
alias cuc="bundle exec cucumber"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias m="migrate"
alias rk="rake"
alias s="rspec"
alias z="zeus"
alias zs='z start'
alias zr='rm .zeus.sock'
alias rc='rails console'
alias rr='rake routes'

# POW
alias pr="touch ~/.pow/restart.txt"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

#Tmux
alias ta='tmux attach -t $1'
alias tl='tmux list-sessions'

#Mysql
alias mss='mysql.server start'

alias zs='zeus start'
alias zr='rm .zeus.sock'

